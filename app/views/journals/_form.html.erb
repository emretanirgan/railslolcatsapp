<%= form_for(@journal) do |f| %>
  <% if @journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :user %><br />
    <%= f.collection_select :user, User.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :posts %><br />
    <%= f.text_field :posts %>
  </div>
  <div class="control-group">
    <label for="public">Make this journal:</label>
    <%= f.radio_button :public, "true" %>
    <%= f.label "Public" %>
    <%= f.radio_button :public, "false" %>
    <%= f.label "Private" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
