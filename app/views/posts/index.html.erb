    <th>Title</th>
    <th>Body</th>
    <!--<th>Author</th>-->
    <th>Awesomeness</th>
    <th></th>
    <th></th>
  </tr>

<% @past_week.each do |post| %>
  <tr>
    <!--<td><%= post.journal %></td>-->
    <td><%= post.date %></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <!--<td><%= post.author %></td>-->
    <td><%= post.rating %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
